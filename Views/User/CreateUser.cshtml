<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="mb-3">
                <label for="username" class="form-label">Enter your Name:</label>
                <input type="text" name="username" id="username" class="form-control" placeholder="Enter your name" />
            </div>

            <div class="mb-3">
                <label for="phone" class="form-label">Enter your Phone:</label>
                <input type="tel" name="phone" id="phone" class="form-control" placeholder="Enter your phone" />
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Enter your Email:</label>
                <input type="text" name="email" id="email" class="form-control" placeholder="Enter your email" />
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary" id="createUser">Submit</button>
            </div>

        </div>
        <div>
            <table id="myTable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                      
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(()=>{
            let table = new DataTable('#myTable', {
                ajax: {
                    url: '/user/GeteUser',
                    type: 'GET',
                    dataSrc: ''
                },

                columns: [
                    {
                        data: null,
                        render: function(data, type, row, meta){
                            return meta.row + 1;
                        }
                    },
                    { data: 'name' },
                    { data: 'phone' },
                    { data: 'email' }
                ]
            });


            
            $("#createUser").on("click", ()=>{
                let username = $('#username').val();
                let phone = $('#phone').val();
                let email = $('#email').val();
                $.ajax({
                    url: '/user/SubmitUser',
                    method : 'POST',
                    data : {Name: username, Phone: phone, Email:email},
                    success: function (response) {
                        table.ajax.reload();
                    }

                });
            });

        });
    </script>
}