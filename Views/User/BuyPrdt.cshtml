<div class="container mt-4">
    <h2>User Cards</h2>
    <div id="cardContainer" class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Cards will load here -->
    </div>
</div>


@section scripts {
    <script>
        $(document).ready(() => {
            $.ajax({
                url: '/user/BuyPrdtInfo',
                method: 'GET',
                success: function (data) {
                    let html = '';
                    data.forEach((prdt) => {
                        html += `
                            <div class="col">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body">
                                        <h5 class="card-title">${prdt.name}</h5>
                                        <p class="card-text"><strong>price:</strong> ${prdt.price}</p>
                                        <p class="card-text"><strong>Description:</strong> ${prdt.description}</p>
                                    </div>
                                    <div class="card-footer">
                                        <input type="hidden" value="${prdt.id}">
                                        <input type="button" value="Buy product">
                                    </div>
                                </div>
                            </div>
                        `;
                    });
                    $('#cardContainer').html(html);
                }
            });
        });
    </script>
}